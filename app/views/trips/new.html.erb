<div id="newTripForm">
  <div id="tripInputFields">
    <%= render "form", trip: @trip %>
  </div>
  <div id="tripGraphic">
  <div><strong>Locations</strong></div>
  <div id="locationPreview">
    <div id="sampleLocation">
      RiverBend Park
    </div>
  </div>
  <div id="locationForm">
    <form>
    <div>
      <label>Name</label>
      <input type="text"/>
    </div>
    <div>
      <label>Address</label>
      <input type="text"/>
    </div>
    <div>
      <label>Contact</label>
      <input type="text"/>
    </div>
    <div>
      <label>Price</label>
      <input type="text"/>
    </div>
    <div>
      <label>Times</label>
      <input type="text"/>
    </div>
    </form>
  </div>
    <div id="addLocation">
      <ion-icon name="add-outline" size="large"></ion-icon>
    </div>
  </div>
</div>
<div>
  <%= link_to "Back to trips", trips_path %>
</div>
