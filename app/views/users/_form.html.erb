<%= form_with(model: user) do |form| %>
  
  
<div class="formcontainer">
  <div class="formbox">
    <div id="headerTitle">    
      <a href="<%= root_path %>">
    <%= image_tag("THLogo.png", :alt => "TripHub logo", class:"logo") %>  </a></div>
  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.text_field :password %>
  </div>

  <% if !@user.id.nil? %>
    <div>
      <%= form.label :user_slogen, style: "display: block" %>
      <%= form.text_area :user_slogen %>
    </div>

    <%# <div>
      <%= link_to "back to profile", @user %> 
    <%# </div> %> 
  <% end %>
  <div>
    <%= form.submit %>
  </div>
</div>

  <% if !@user.id.nil? %>
    <div class="formbox">
      <%= link_to "back to profile", @user %> 
    </div>
  <% end %>

</div>

<% end %>


