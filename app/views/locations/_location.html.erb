<div id="<%= dom_id location %>">

  <p>
    <strong>Name:</strong>
    <%= location.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= location.description %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= location.address %>
  </p>

  <p>
    <strong>Contact:</strong>
    <%= location.contact %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= location.price %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= location.image %>
  </p>

  <p>
    <strong>Open times:</strong>
    <%= location.open_times %>
  </p>

  <p>
    <strong>Images:</strong>
    <ul>
      <% location.images.each do |file| %>
        <li>
          <% if file.representable? %>
            <%= image_tag file.variant(
              resize_to_fit: [400, 400]
            ) %>
          <% else %>
            <%= link_to rails_blob_path(file, disposition: "attachment") do %>
              <%= image_tag "placeholder.png", alt: "Download file" %>
            <% end %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </p>
  

</div>
