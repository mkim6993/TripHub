<header class="navbar navbar-fixed-top navbar-inverse" style="background-color: rgb(104, 69, 134);">
  <div class="containerHeader">
    <div id="headerTitle"><%= link_to "TripHub", root_path, class: "headerTitleText" %></div>
    <nav id="headerNav">
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul id="navbar-menu" class="nav navbar-nav navbar-right collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>  
        <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li><%= link_to "My Trips", "/users/" << current_user.id.to_s << "/trips" %></li>
          <li><%= link_to "Add Trip", new_trip_path %></li>
          <li><%= link_to "Add Location", new_location_path %></li>
          <li><%= link_to "Notifications", new_trip_path %></li>
          <li><%= link_to "Log out", logout_path,
                                       data: { "turbo-method": :delete } %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              Account <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
          <li class="divider"></li>
            <li>
              <%= link_to "Log out", logout_path, data: { "turbo-method": :delete } %>
            </li>
            </ul>
        </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
    <div id="quickProfileContainer">
      <div id="quickProfile">
        <div id="quickProfileAction"></div>
        <div id="quickProfilePhoto"></div>
      </div>
    </div>
  </div>
</header>